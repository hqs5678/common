<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="false"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="@color/titleColorLight"
        aigestudio:wheel_item_text_size="18sp"
        aigestudio:wheel_selected_item_text_color="@color/yellowTitleColor" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="false"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="@color/titleColorLight"
        aigestudio:wheel_item_text_size="18sp"
        aigestudio:wheel_selected_item_text_color="@color/yellowTitleColor" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="false"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="@color/titleColorLight"
        aigestudio:wheel_item_text_size="18sp"
        aigestudio:wheel_selected_item_text_color="@color/yellowTitleColor" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_hour1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="false"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="@color/titleColorLight"
        aigestudio:wheel_item_text_size="18sp"
        aigestudio:wheel_selected_item_text_color="@color/yellowTitleColor" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_hour2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="false"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="@color/titleColorLight"
        aigestudio:wheel_item_text_size="18sp"
        aigestudio:wheel_selected_item_text_color="@color/yellowTitleColor" />

</LinearLayout>