<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.lzyzsd.circleprogress.CircleProgress
        android:id="@+id/circle_progress"
        android:layout_width="@dimen/circleProgressWH"
        android:layout_height="@dimen/circleProgressWH"
        android:layout_centerInParent="true"
        custom:circle_finished_color="#3ec1f9"
        custom:circle_progress="20"
        custom:circle_text_color="@color/titleColor"
        custom:circle_text_size="@dimen/fontSizeSmall"
        custom:circle_unfinished_color="@color/appBackgroundColor" />

</RelativeLayout>
